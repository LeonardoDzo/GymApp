@model IEnumerable<GymApp.Models.Egresos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Egresos", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group">
        <div class="col-md-15">
            @Html.DropDownList("Tipo", (SelectList)ViewBag.tipo, "Todos", new { @class = "btn-default dropdown-toggle" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-15">
            @Html.TextBox("StartDate", "", new { @class = "datepicker form-control", @type = "date" })


        </div>
    </div>

    <div class="form-group">
        <div class="col-md-15">
            @Html.TextBox("StartEnd", "", new { @class = "datepicker form-control", @type = "date" })


        </div>
    </div>
    <div class="form-group">
        <div class="col-md-1"></div>
    </div>
    <div class="form-group">
        <div class="col-md-15">


            <input type="submit" id="enviar" value="Buscar" class="form-control" />


        </div>

    </div>
    <div class="form-group">
        <div class="col-md-1"></div>
    </div>
    <div class="form-group">
        <div class="col-md-15">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <a class="signup" href="@Url.Action("Create", "Egresos")" class="btn">
                Nuevo Egreso
        </div>
    </div>

    
}
<p>
    @*@Html.ActionLink("Nuevo Egreso", "Create")*@
</p>
<div class="container table-responsive">
    <table class="rwd-table">
        <tr>            
            <th data-th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th data-th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th data-th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th data-th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th data-th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Monto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Egresos",new { id=item.id })" class="btn">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>


                    <a href="@Url.Action("Delete", "Egresos",new { id=item.id })" class="btn">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </a>


                    @*@Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.id })*@
                </td>
            </tr>
        }

    </table>
</div>
<h3>Total: $@ViewBag.totalegresos</h3>

