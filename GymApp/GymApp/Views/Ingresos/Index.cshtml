@model IEnumerable<GymApp.Models.Ingresos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@using (Html.BeginForm("Index", "Ingresos", FormMethod.Get))
{

    @Html.DropDownList("Tipo", (SelectList)ViewBag.tipo, "Todos", new { @class = "btn-default dropdown-toggle" });
    @Html.TextBox("StartDate","", new { @class = "datepicker form-control", @type = "date" })
    @Html.TextBox("StartEnd","", new { @class = "datepicker form-control", @type = "date" })
    <input type="submit" value="Buscar" class="form-control"/>
}
<p>
    @Html.ActionLink("Nuevo ingreso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Ingresos",new { id=item.id })" class="btn">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>

            <a href="@Url.Action("Details", "Ingresos",new { id=item.id })" class="btn">
                <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
            </a>

            <a href="@Url.Action("Delete", "Ingresos",new { id=item.id })" class="btn">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </a>


            @*@Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })*@
        </td>
    </tr>
}

</table>
<h3>Total: $@ViewBag.totalingresos</h3>


