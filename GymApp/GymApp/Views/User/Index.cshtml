@model IEnumerable<GymApp.Models.UserViewModels>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Registrar nuevo usuario", "Register", "Account")
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipoMembresia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ffin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userRol)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipoMembresia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ffin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userRol)
                </td>
                <td>
                    @if (User.IsInRole("Administrador"))
                    {
                        <p>
                            @Html.ActionLink("Edit ", "Edit", new { id = item.Id }) |

                            @Html.ActionLink("Delete ", "Delete", new { id = item.Id }) |

                        </p>
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                            
                    
                </td>
            </tr>
        }
    </table>
</div>

