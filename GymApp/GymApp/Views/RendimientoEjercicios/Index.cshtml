@model IEnumerable<GymApp.Models.RendimientoEjercicio>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Ejercicio.Nombre)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PR)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ejercicio.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PR)
        </td>

        @*<td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>*@

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>



}

</table>

@Html.DropDownList("ejercicioID", null, htmlAttributes: new { @class = "form-control" })
<input type="submit"id="Buscar" value="Buscar" class="form-control" />

<div id="buscadorRendimiento" class="col-lg-6"></div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery-1.10.2.js")


    <script type="text/javascript">
            $("#Buscar").click(function () {

                $('#buscadorRendimiento').empty();
                $('#buscadorRendimiento').load("/RendimientoEjercicios/_Index?ejercicioID=" + $("#ejercicioID").val());
            });

    </script>
}